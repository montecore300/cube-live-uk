{% if collection.description != blank %}
  <div class="collection-description page-width" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    {{ collection.description }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Collection Description",
  "tag": "section",
  "class": "collection-description page-width",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection Description",
      "category": "Collection"
    }
  ]
}
{% endschema %}
